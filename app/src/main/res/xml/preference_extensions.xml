<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Extensions">
        <Preference
            android:key="extensions_list"
            android:summary="Show a list of installed extensions."
            android:title="Installed extensions"/>
        <Preference
            android:key="uninstall_extension"
            android:summary="Uninstall an extension."
            android:title="Uninstall extension"/>
        <Preference
            android:summary="@string/extensions_description"
            android:title="@string/extensions_store">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://extensions.cookiejarapps.com">
                <extra
                    android:name="SOURCE"
                    android:value="SELF" />
            </intent>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
