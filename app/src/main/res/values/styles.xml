<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Settings themes -->
    <style name="Theme.SettingsTheme" parent="Theme.LightTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate</item>
    </style>

    <style name="Theme.SettingsTheme.Dark" parent="Theme.DarkTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate_dark</item>

        <!-- Dark settings has a special primary dark -->
        <item name="colorPrimaryDark">@color/secondary_color_settings_dark</item>
    </style>

    <style name="Theme.SettingsTheme.Black" parent="Theme.BlackTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate_black</item>
    </style>

    <!-- Regular themes -->
    <style name="Theme.LightTheme" parent="Theme.BaseLightTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>

    <style name="Theme.DarkTheme" parent="Theme.BaseDarkTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>

    <style name="Theme.BlackTheme" parent="Theme.BaseBlackTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/black</item>
    </style>

    <!-- Base Themes -->
    <style name="Theme.BaseLightTheme" parent="Theme.AppCompat.Light">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/drawer_background</item>
        <item name="dividerColor">@color/divider_light</item>

        <item name="selectedBackground">@color/selected_light</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyle</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Light</item>

        <item name="ic_round_settings">@drawable/ic_round_settings</item>
        <item name="ic_action_star">@drawable/ic_action_star</item>
        <item name="ic_round_smartphone">@drawable/ic_round_smartphone</item>
        <item name="ic_round_lock">@drawable/ic_round_lock</item>
        <item name="ic_round_add">@drawable/ic_round_add</item>
        <item name="ic_round_person">@drawable/ic_round_person</item>
        <item name="ic_round_world_lock">@drawable/ic_round_world_lock</item>
        <item name="ic_round_question_answer">@drawable/ic_round_question_answer</item>

    </style>

    <style name="Theme.BaseDarkTheme" parent="Theme.AppCompat">

        <!-- Theme colors -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/drawer_background_dark</item>
        <item name="dividerColor">@color/divider_dark</item>

        <item name="selectedBackground">@color/selected_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyleWhite</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Dark</item>

        <item name="ic_round_settings">@drawable/ic_round_settings_light</item>
        <item name="ic_action_star">@drawable/ic_action_star_light</item>
        <item name="ic_round_smartphone">@drawable/ic_round_smartphone_light</item>
        <item name="ic_round_lock">@drawable/ic_round_lock_light</item>
        <item name="ic_round_add">@drawable/ic_round_add_light</item>
        <item name="ic_round_person">@drawable/ic_round_person_light</item>
        <item name="ic_round_world_lock">@drawable/ic_round_world_lock_light</item>
        <item name="ic_round_question_answer">@drawable/ic_round_question_answer_light</item>
    </style>

    <style name="Theme.BaseBlackTheme" parent="Theme.AppCompat">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/black</item>
        <item name="dividerColor">@color/black</item>

        <item name="selectedBackground">@color/selected_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyleWhite</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Black</item>

        <item name="ic_round_settings">@drawable/ic_round_settings_light</item>
        <item name="ic_action_star">@drawable/ic_action_star_light</item>
        <item name="ic_round_smartphone">@drawable/ic_round_smartphone_light</item>
        <item name="ic_round_lock">@drawable/ic_round_lock_light</item>
        <item name="ic_round_add">@drawable/ic_round_add_light</item>
        <item name="ic_round_person">@drawable/ic_round_person_light</item>
        <item name="ic_round_world_lock">@drawable/ic_round_world_lock_light</item>
        <item name="ic_round_question_answer">@drawable/ic_round_question_answer_light</item>
    </style>

    <!-- AlertDialog Theming -->
    <style name="AppCompatDialogStyle.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="AppCompatDialogStyle.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="AppCompatDialogStyle.Black" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <!-- Overflow Menu Customization -->
    <style name="overFlowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:tint">#000000<!--#8E4F01--></item>
        <!-- <item name="srcCompat">@drawable/ic_baseline_more_vert_24px</item> -->
    </style>

    <style name="overFlowButtonStyleWhite" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:tint">#ffffff</item>
        <!-- <item name="srcCompat">@drawable/ic_baseline_more_vert_white</item> -->
    </style>

    <!-- Text Customization -->
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



</resources>