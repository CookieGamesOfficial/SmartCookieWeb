<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Extensions">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="auto_install"
            android:title="Auto install extensions"
            android:summary="Install extensions without showing a popup first."/>
        <Preference
            android:key="extensions_file"
            android:summary="Edit the extensions file."
            android:title="Extensions file"/>
        <Preference
            android:summary="Open the extensions store."
            android:title="Extensions store">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://extensions.cookiejarapps.com">
                <extra
                    android:name="SOURCE"
                    android:value="SELF" />
            </intent>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
